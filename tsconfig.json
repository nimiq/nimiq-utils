{
  "compilerOptions": {
    "outDir": "./build/",
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "./dist/src/",
    "lib": [
      "es2017",
      "esnext.bigint",
      "es6",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*.ts",
    "src/browser-detection/SpecialTypes.d.ts"
  ],
  "exclude": [
    "**/node_modules"
  ]
}
